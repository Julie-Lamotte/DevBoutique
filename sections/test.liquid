<div class="custom-text-section">
  <h2>{{ product.title }}</h2>

  {{ product.price }}

  {%- if product.vendor -%}
    <p>{{ product.vendor }}</p>
  {%- endif -%}

  <p>{{ product.description }}</p>
</div>

{% schema %}
  {
    "name": "Texte",
    "settings": [
      {
        "id": "custom_text_title",
        "type": "text",
        "label": "Titre",
        "default": "Entrer le titre"
      },
      {
        "id": "custom_text_body",
        "type": "richtext",
        "label": "Texte",
        "default": "<p>Entrer le texte</p>"
      }
    ],
    "presets": [
      {
        "name": "Texte",
        "category": "Custom"
      }
    ],
    "blocks": [
	  {
       "type": "@app"
    },
	  {
        "type": "title",
        "name": "Title",
        "limit": 1
    },
	  {
	       "type": "price",
       	 "name": "Price",
         "limit": 1
	  },
    {
         "type": "vendor",
         "name": "Vendor",
         "limit": 1
    },
	  {
	       "type": "description",
         "name": "Description",
         "limit": 1
	  }
]
  }
{% endschema %}