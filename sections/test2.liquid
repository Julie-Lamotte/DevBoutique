<div class="custom-text-section">
    <h2> {{ section.settings.custom_text_title }} </h2>
    <div>{{ block.settings.custom_text_body }}</div>
</div>
  
{% schema %}
    {
        "name": "my titre et image",
        "settings": [
            {
            "id": "custom_text_title",
            "type": "text",
            "label": "Titre",
            "default": "Entrer le titre"
            }
        ],
        "blocks": [
            {
                "name": "text img",
                "type": "image",
                "settings": [ 
                    {
                    "id": "custom_text_title",
                    "type": "text",
                    "label": "Titre",
                    "default": "Entrer le titre"
                    },       
                    {
                    "id": "custom_text_body",
                    "type": "richtext",
                    "label": "Texte",
                    "default": "<p>Entrer le texte</p>"
                    },
                    {
                    "type": "image_picker",
                    "id": "img",
                    "label": "Image"
                    },
                    {
                    "id": "bouton",
                    "type": "button",
                    "label": "Bouton",
                    "default": "<p>Entrer le texte</p>"
                    }
                ],
                "presets": [
                    {
                    "name": "Texte",
                    "category": "Custom"
                    }
                ]
            }
        ]  
    }
{% endschema %}