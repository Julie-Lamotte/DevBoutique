<div class="custom-text-section">
    <h2> {{ section.settings.custom_text_title }} </h2>
    <div>{{ block.settings.custom_text_body }}</div>
</div>

{% for link in linklists.main.links %}
  <a href="{{ link.url }}"
    {% if link.current %}aria-current="page" class="highlight"{% endif %}
  >
   {{ link.title }}
  </a>
{% endfor %}

<a href="/collections/summer">Summer collection</a>

  {% for block in section.blocks %}
    {% if block.settings.img != nil %}
      <h2> {{ block.settings.custom_text_title }} </h2>
      <div>{{ block.settings.custom_text_body }}</div>
      <img src="{{ block.settings.img | img_url: '600x' }}" loading="lazy">    
    {% endif %}
  {% endfor %}
  
  {% schema %}
    {
      "name": "my titre et image",
      "settings": [
        {
          "id": "custom_text_title",
          "type": "text",
          "label": "Titre",
          "default": "Entrer le titre"
        }
      ],
      "blocks": [
        {
         "name": "text img",
         "type": "image",
         "max_blocks": 5,
         "settings": [ 
            {
            "id": "custom_text_title",
            "type": "text",
            "label": "Titre",
            "default": "Entrer le titre"
            },       
            {
              "id": "custom_text_body",
              "type": "richtext",
              "label": "Texte",
              "default": "<p>Entrer le texte</p>"
            },
            {
              "type": "image_picker",
              "id": "img",
              "label": "Image"
            }
            {
            "id": "link",
            "type": "link",
            "label": "Lien",
            "default": "Lien"
            }, 
          ],
          "presets": [
            {
              "name": "Texte",
              "category": "Custom"
            }
          ],
        }
      ]  
    }
  {% endschema %}